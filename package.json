    "eslint-plugin-turbo": "^2.0.12",
    "glob": "^10.4.1",
    "husky": "^9.0.11",
    "lexical": "0.17.2-nightly.20240906.0",
    "lint-staged": "^15.2.5",
    "minimist": "^1.2.8",
